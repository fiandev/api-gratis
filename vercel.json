{
    "buildCommand": "npm run build && npm run start",
    "builds": [
        {
            "src": "./dist/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/dist/server.js"
        }
    ]
}
