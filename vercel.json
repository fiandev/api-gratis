{
    "buildCommand": "npm run build && npm run start",
    "builds": [
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "src/index.ts",
            "use": "@vercel/bun"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/src/index.ts"
        }
    ]
}
